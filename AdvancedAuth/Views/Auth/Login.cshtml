

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Sign Up</h2>
                    <form method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label text-secondary">Email or Username</label>
                            <input type="text" id="email" class="form-control" required autocomplete="off"
                                    name="usernameOrEmail">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label text-secondary">Password</label>
                            <input type="password" id="password" class="form-control" required
                                    name="Password">
                        </div>
                        <div class="mb-2 d-flex justify-content-between">
                            <a href="/Password/ForgotPassword" class="text-secondary text-decoration-none">Forgot password?</a>
                            <a href="/Auth/Register" class="text-secondary text-decoration-none">Don't have an account?</a>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Sign In</button>
                        </div>
                    </form>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-2" role="alert"></div>
                </div>
            </div>
        </div>
    </div>
</div>
