@using AspNetCore.ReCaptcha
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Sign Up</h2>
                    <form method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label text-secondary">Firstname</label>
                            <input type="text" id="name" class="form-control" required autocomplete="off" 
                                 name="FirstName">
                        </div>
                        <div class="mb-3">
                            <label for="lname" class="form-label text-secondary">Lastname</label>
                            <input type="text" id="lname" class="form-control" required autocomplete="off"
                                    name="LastName">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label text-secondary">Email</label>
                            <input type="email" id="email" class="form-control" required autocomplete="off"
                                    name="Email">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label text-secondary">Password</label>
                            <input type="password" id="password" class="form-control" required
                                    name="Password">
                        </div>
                        <div class="mb-3">
                            <label for="date" class="form-label text-secondary">Birth date</label>
                            <input type="date" id="date" class="form-control" required name="BirthDate">
                        </div>
                        <div class="mb-2">
                            <a href="/Auth/Login" class="text-secondary text-decoration-none">Already have an account?</a>
                        </div>

                        @Html.ReCaptcha()

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Sign Up</button>
                        </div>
                    </form>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-2" role="alert">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
